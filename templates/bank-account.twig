  <body class="text-center">
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">

    <header class="masthead mb-auto">
      <div class="inner">
        <h3 class="masthead-brand">PwPay</h3>
        <nav class="nav nav-masthead justify-content-center">
          <a class="nav-link" href="/">Home</a>
            {% if (is_login)%}
                <a class="nav-link" href="/summary">Dashboard</a>
                <a class="nav-link active" href="account/bank-account">Bank Account</a>
                <a class="nav-link" href="/profile">Profile</a>
                <a class="nav-link" href="/sign-out">Sign Out</a>
            {% else %}
              <a class="nav-link active" href="sign-in">Sign In</a>
              <a class="nav-link" href="sign-up">Sign Up</a>
            {% endif %}
        </nav>
      </div>
    </header>


      <br>
      <br>
    <h1 class="h3 mb-3 font-weight-normal">Welcome to your bank</h1>

      <br>
    <br>

      {% if (bankAccount)%}

        Your first six digits of your IBAN: {{ sixDigits }}
        <br>
        <br>
        Your current money: {{ money }}

        <br>
        <br>

        Transactions:

        <br>
        <br>
        -- LOAD MONEY --
        <br>
        <br>
        <form class="form-bank" action="bank-account/load" method="post" enctype="multipart/form-data">
          <input id="loadMoney" type="number" name="loadMoney"  class="form-control" placeholder="Money">
          <br>
            {{ errorBank }}
          <br>
          <input type="submit" value="Load me some money" name="submit">
        </form>

      {% else %}
          <p>It looks like you don't have an account, try adding one. We will give you 20 euros for free when you add your account</p>
        <br>
        <br>

        <form class="form-bank" action="bank-account" method="post" enctype="multipart/form-data">
          <input id="ownername" type="text" name="ownerName"  class="form-control" placeholder="Owner Name">


          <input id="ibn" type="text" name="ibn" class="form-control" placeholder="IBN">

          <br>
          <br>
            {{ errorBank }}
          <br>
          <br>
          <input type="submit" value="Add Account" name="submit">
          <br>
          <br>
        </form>

      {% endif %}



    </form>


